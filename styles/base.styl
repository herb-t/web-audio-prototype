*
	-webkit-box-sizing border-box
	-moz-box-sizing border-box
	box-sizing border-box

body,
html
	width 100%
	height 100%  

body,
main
	position relative
	left 0
	top 0
	overflow hidden
	background #000
	font 400 16px/30px 'Orbitron', sans-serif
	color #FFF
	
#overlay
	position fixed
	top 0
	left 0
	width 100%
	height 100%
	z-index 9999
	background url('../images/bg-stars.jpg')no-repeat center center
	-webkit-background-size cover
	-o-background-size cover
	background-size cover
	pointer-events none
	
	#content
		position absolute
		letter-spacing 1px 
		bottom 125px
		right 125px
		
		h1
			text-shadow -1px -1px 0px darken(#31cbf7, 15), -2px -2px 0px darken(#31cbf7, 12), -3px -3px 0px darken(#31cbf7, 10), -4px -4px 0px #31cbf7, -5px -5px 0px #31cbf7, -6px -6px 0px #31cbf7, -7px -7px 0px #31cbf7, -8px -8px 0px #31cbf7, -9px -9px 0px #31cbf7
		p
			text-shadow -1px -1px 0px darken(#31cbf7, 15), -2px -2px 0px darken(#31cbf7, 12), -3px -3px 0px darken(#31cbf7, 10)

#songs
	position absolute
	bottom 25px
	right 25px
	z-index 100
	color #000
	padding 5px 10px
	-webkit-border-radius 4px 
	border-radius 4px 
	box-shadow: 0 3px 6px rgba(0,0,0,0.16), 0 3px 6px rgba(0,0,0,0.23);

svg
	position fixed
	top 25px
	right 25px
	z-index 150
	width 40px
	height 40px
	
	path
		fill white
		-webkit-transition 0.3s ease-out 
		-moz-transition 0.3s ease-out 
		-ms-transition 0.3s ease-out 
		-o-transition 0.3s ease-out 
		transition 0.3s ease-out

a:hover path
	fill #6666b2
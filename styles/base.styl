*
	-webkit-box-sizing border-box
	   -moz-box-sizing border-box
	        box-sizing border-box

html,
body
	width 100%
	height 100%

body
	position relative
	top 0
	left 0
	right 0
	bottom 0
	overflow hidden
	background #000

.bg
	pointer-events none
	width 100%
	height 100%
	position absolute
	z-index -1
	opacity 0.4
	background url('../images/bgz.jpg')no-repeat center center
	-webkit-background-size cover
	     -o-background-size cover
	        background-size cover	
	-webkit-transform scale(2)
	   -moz-transform scale(2)
	    -ms-transform scale(2)
	     -o-transform scale(2)
	        transform scale(2)
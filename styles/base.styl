*
	-webkit-box-sizing border-box
	-moz-box-sizing border-box
	box-sizing border-box

body,
html
	width 100%
	height 100%  

body,
main
	position relative
	left 0
	top 0
	overflow hidden
	background #000
	font 400 16px/30px sans-serif
	color #FFF
	
#overlay
	position fixed
	top 0
	left 0
	width 100%
	height 100%
	z-index 9999
	background url('../images/bg-stars.jpg')no-repeat center center
	-webkit-background-size cover
	-o-background-size cover
	background-size cover
	// visibility hidden !important
	pointer-events none  

#songs
	position absolute
	top 50px
	right 50px
	z-index 100
	color #000
	padding 5px 10px

.option-value
	line-height 30px